{
  "manifest_version": 2,

  "name": "Wishlist",
  "short_name": "Add things to your wishlist.",
  "version": "1.0",

  "browser_action": {
    "default_title": "Wishlist",
    "default_icon": "icons/16x16.png"
  },

  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },

  "background": {
    "scripts": ["vendors/jquery.min.js","background.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "http://*/",
    "https://*/",
    "storage"
  ],

  "content_security_policy": "script-src 'self' http://localhost:3000/; object-src 'self'"
}
